<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppParaninfo.MainPage"
             BackgroundImage="quer.jpeg">

    <StackLayout  VerticalOptions="Center" Padding="10" >
        <!-- centralizando e margem-->

        <ScrollView >
            <!-- a imagem não rola junto com o conteúdo da página-->

            <Grid>
                <!--botões que direcionam para as páginas das matérias-->
                <Button Grid.Row="1"  Text="SIM" Clicked="Button_Clicked"  BackgroundColor="Aqua"   />
                <Button Grid.Row="2"  Text="NÃO" Clicked="Button_Clicked_1"  BackgroundColor="Aqua"/>


            </Grid>

        </ScrollView>

    </StackLayout>


</ContentPage>
